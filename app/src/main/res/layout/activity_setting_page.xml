<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_setting_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@mipmap/wallapp"
        tools:context="com.example.supawinee.smartlightforsmarthome.SettingPage">

        <TextView
            android:text="Application Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginBottom="15dp"
            android:textColor="#f79b0a"
            android:layout_weight="0.00" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#f7cd0a">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="APPID"
                    android:id="@+id/appid_EditText"
                    android:inputType="text"
                    android:textColorHint="#f7cd0a"
                    android:backgroundTint="#f7cd0a"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleTint="#f7cd0a"
                android:textColorHint="#f7cd0a">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="KEY"
                    android:id="@+id/key_EditText"
                    android:inputType="textPassword"
                    android:backgroundTint="#f7cd0a"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleTint="#f7cd0a"
                android:textColorHint="#f7cd0a">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SECRET"
                    android:id="@+id/secret_EditText"
                    android:inputType="textPassword"
                    android:textColorHint="#f7cd0a"
                    android:textColor="#ffffff"
                    android:backgroundTint="#f7cd0a"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <TextView
            android:text="Device Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textColor="#00C133"
            android:layout_weight="0.00" />

        <CheckBox
            android:text="BED ROOM"
            android:textColor="#99FF00"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxBedroom"
            android:layout_weight="0.00"
            android:buttonTint="#ffffff"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#E1FF00">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bed room device's alias"
                    android:id="@+id/alias_EditText"
                    android:inputType="text"
                    android:backgroundTint="#E1FF00"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>







        <CheckBox
            android:text="LIVING ROOM"
            android:textColor="#99FF00"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxLivingroom"
            android:layout_weight="0.00"
            android:buttonTint="#ffffff"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#E1FF00">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Living room device's alias"
                    android:id="@+id/alias_Livingroom_EditText"
                    android:inputType="text"
                    android:backgroundTint="#E1FF00"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>








        <CheckBox
            android:text="WORKING ROOM"
            android:textColor="#99FF00"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxWorkingroom"
            android:layout_weight="0.00"
            android:buttonTint="#ffffff"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#E1FF00">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Working room device's alias"
                    android:id="@+id/alias_Workingroom_EditText"
                    android:inputType="text"
                    android:backgroundTint="#E1FF00"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <CheckBox
            android:text="DINING ROOM"
            android:textColor="#99FF00"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxDiningroom"
            android:layout_weight="0.00"
            android:buttonTint="#ffffff"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#E1FF00">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dining room device's alias"
                    android:id="@+id/alias_Diningroom_EditText"
                    android:inputType="text"
                    android:backgroundTint="#E1FF00"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>










        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:text="COMMIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_commitSetting"
                android:onClick="commitSetting"
                android:layout_marginTop="10dp"
                android:background="#414141"
                android:textColor="#ffffff"/>



        </LinearLayout>

    </LinearLayout>
</ScrollView>