<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wallapp"
    tools:context="com.example.supawinee.smartlightforsmarthome.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAIN MENU"
            android:textAlignment="center"
            android:textColor="#ff8b2d"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:srcCompat="@mipmap/logo3"
            android:id="@+id/imageTest"
            android:layout_weight="0.54" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COLOR CONTROL"
            android:textSize="20dp"
            android:id="@+id/btn_normalmode"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="#ff6d2d"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COLOR THEME"
            android:textSize="20dp"
            android:id="@+id/btn_thememode"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="#ff9f2d"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALARM"
            android:textSize="20dp"
            android:id="@+id/btn_alarmmode"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="#ffc12d"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AMBIAN SOUND"
            android:textSize="20dp"
            android:id="@+id/btn_musicmode"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="#c1ff2d"
            android:textColor="#ff6d2d"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOTION SENSOR"
            android:textSize="20dp"
            android:id="@+id/btn_motionmode"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="#2dffb7"
            android:textColor="#6f14cd"/>


    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
